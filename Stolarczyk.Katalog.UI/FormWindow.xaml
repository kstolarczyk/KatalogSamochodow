<Window x:Class="Stolarczyk.Katalog.UI.FormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stolarczyk.Katalog.UI"
        mc:Ignorable="d"
        Title="FormWindow" Height="600" Width="480">
    <Window.Resources>
        <Style TargetType="Button" x:Key="WindowButton">
            <Setter Property="Width" Value="100"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
    </Window.Resources>
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Style="{StaticResource WindowButton}" Content="Zapisz" x:Name="ZapiszButton" Padding="5"></Button>
            <Button Style="{StaticResource WindowButton}"  Content="Anuluj" x:Name="AnulujButton" Padding="5"></Button>
        </StackPanel>
    </Grid>
</Window>
